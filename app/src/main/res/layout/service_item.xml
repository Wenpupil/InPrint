<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_service_background">

    <LinearLayout
        android:id="@+id/talk_layout_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/talk_item_img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/activity_set_enter"
            android:src="@mipmap/locationimg"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/service_item_left">
            <TextView
                android:id="@+id/talk_item_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/my_black"
                android:text="@string/activity_service_info"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/talk_layout_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/sfd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/service_item_right">
            <TextView
                android:id="@+id/talk_item_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:text="@string/activity_service_info"/>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/talk_item_img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/activity_set_enter"
            android:src="@mipmap/userimg"
            app:riv_oval="true"/>
    </LinearLayout>
</RelativeLayout>