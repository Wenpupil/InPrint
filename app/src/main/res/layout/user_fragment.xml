<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_fragment_drawable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_user_fragment_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_fragment_radius"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/iv_user_fragment_img"
            android:layout_marginTop="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/user_fragment_img"
            android:src="@mipmap/userimg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_user_fragment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/user_fragment_id"
            android:textColor="@color/user_fragment_text"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_user_fragment_img"/>
        <TextView
            android:id="@+id/white"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_fragment_id" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/user_fragment_view"
            app:layout_constraintTop_toBottomOf="@+id/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user_fragment_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/user_fragment_item"
        app:layout_constraintTop_toBottomOf="@+id/rl_user_fragment_head"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/iv_user_fragment_balance_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/user_fragment_balance_img"
            android:src="@mipmap/payment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_user_fragment_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/my_black"
            android:textSize="16sp"
            android:text="@string/user_fragment_balance"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_fragment_balance_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/user_fragment_back"
            android:src="@mipmap/backright"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/split_line_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/background_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_user_fragment_service"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user_fragment_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_fragment_item"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_user_fragment_balance"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/iv_user_fragment_service_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/user_fragment_service_img"
            android:src="@mipmap/kefu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_user_fragment_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/user_fragment_text"
            android:text="@string/user_fragment_service"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_fragment_service_img"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/user_fragment_back"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/background_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_user_fragment_recharge"/>
    <!-- 充值-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user_fragment_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_fragment_item"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_user_fragment_service"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/iv_user_fragment_recharge_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/user_fragment_recharge_img"
            android:src="@mipmap/chongzhi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_user_fragment_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/user_fragment_text"
            android:text="@string/user_fragment_recharge"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_fragment_recharge_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/user_fragment_back"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/background_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_user_fragment_set"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_user_fragment_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/user_fragment_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_user_fragment_recharge">
        <ImageView
            android:id="@+id/iv_user_fragment_set_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/user_fragment_set_img"
            android:src="@mipmap/shezhi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_user_fragment_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/user_fragment_text"
            android:textSize="16sp"
            android:text="@string/user_fragment_set"
            app:layout_constraintLeft_toRightOf="@+id/iv_user_fragment_set_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/user_fragment_back"
            android:src="@mipmap/backright"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>