<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey">
    <include layout="@layout/activity_order_top"/>
    <!-- 订单信息 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/activity_order_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_order_top">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/print_iv_icon"
            android:src="@mipmap/tubiao64"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/print_tv_icon"
            android:textColor="@color/red_book_text_color"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/v_split"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon" />

        <TextView
            android:id="@+id/iv_icon_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/print_tv_icon_end"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/v_split"/>
        <View
            android:id="@+id/v_split"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@+id/iv_icon"/>
        <ImageView
            android:id="@+id/iv_order_doc_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/activity_order_doc_img"
            android:src="@mipmap/mydoc"
            app:layout_constraintTop_toBottomOf="@+id/v_split"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/in_grey"
            android:text="@string/activity_order_doc_name"
            app:layout_constraintTop_toBottomOf="@+id/v_split"
            app:layout_constraintBottom_toTopOf="@+id/v_split_two"
            app:layout_constraintLeft_toRightOf="@+id/iv_order_doc_img"/>
        <View
            android:id="@+id/v_split_two"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@+id/iv_order_doc_img"/>
        <TextView
            android:id="@+id/tv_page_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/activity_order_text_first"
            android:text="@string/activity_order_page_first"
            app:layout_constraintTop_toBottomOf="@+id/v_split_two"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_page_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_text_end"
            android:textSize="14sp"
            android:text="@string/activity_order_page_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_split_two"
            app:layout_constraintBottom_toTopOf="@+id/v_split_three"/>
        <View
            android:id="@+id/v_split_three"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_page_first"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_sum_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/activity_order_text_first"
            android:textSize="12sp"
            android:text="@string/activity_order_sum_first"
            app:layout_constraintTop_toBottomOf="@+id/v_split_three"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_sum_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_text_end"
            android:textSize="14sp"
            android:text="@string/activity_order_sum_end"
            app:layout_constraintTop_toTopOf="@+id/v_split_three"
            app:layout_constraintBottom_toTopOf="@+id/v_split_four"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/v_split_four"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_sum_first"/>
        <TextView
            android:id="@+id/tv_order_time_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/activity_order_text_first"
            android:text="@string/activity_order_time_first"
            app:layout_constraintTop_toBottomOf="@+id/v_split_four"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_text_end"
            android:textSize="14sp"
            android:text="@string/activity_order_time_end"
            app:layout_constraintTop_toBottomOf="@+id/v_split_four"
            app:layout_constraintBottom_toTopOf="@+id/v_split_five"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/v_split_five"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_time_first"/>
        <TextView
            android:id="@+id/tv_order_pay_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/activity_order_text_first"
            android:textSize="12sp"
            android:text="@string/activity_order_pay_first"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_split_five"/>
        <TextView
            android:id="@+id/tv_order_pay_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_pay_end"
            android:textSize="14sp"
            android:text="@string/activity_order_pay_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_split_five"
            app:layout_constraintBottom_toTopOf="@+id/v_split_six"/>
        <View
            android:id="@+id/v_split_six"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_pay_first"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/activity_order_text_first"
            android:textSize="12sp"
            android:text="@string/activity_order_total_first"
            app:layout_constraintRight_toLeftOf="@+id/tv_order_total"
            app:layout_constraintTop_toBottomOf="@+id/v_split_six"
            app:layout_constraintBottom_toTopOf="@+id/tv_order_space"/>
        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_total_text"
            android:textSize="18sp"
            android:text="@string/activity_order_total"
            app:layout_constraintTop_toBottomOf="@+id/v_split_six"
            app:layout_constraintBottom_toTopOf="@+id/tv_order_space"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_order_space"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_total"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_order_deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/activity_order_deliver"
        app:layout_constraintTop_toBottomOf="@+id/cl_order_info"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/tv_order_deliver_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/activity_order_text_first"
            android:textSize="16sp"
            android:text="@string/activity_order_deliver_head"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_location_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/activity_order_deliver_text_first"
            android:text="@string/activity_order_location_first"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_deliver_head"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_location_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_deliver_text_end"
            android:textSize="13sp"
            android:text="@string/activity_order_location_end"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_deliver_head"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_order_method_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/activity_order_deliver_text_first"
            android:textSize="14sp"
            android:text="@string/activity_order_method_first"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_location_first"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_method_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_deliver_text_end"
            android:textSize="13sp"
            android:text="@string/activity_order_method_end"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_location_end"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tv_order_number_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/activity_order_deliver_text_first"
            android:textSize="14sp"
            android:text="@string/activity_order_number_first"
            app:layout_constraintTop_toBottomOf="@id/tv_order_method_first"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_order_number_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/activity_order_number_end"
            android:textSize="16sp"
            android:text="@string/activity_order_number_end"
            app:layout_constraintTop_toBottomOf="@id/tv_order_method_end"
            app:layout_constraintRight_toRightOf="parent"/>
        <View
            android:id="@+id/v_split_seven"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="0.5dip"
            android:background="@color/activity_order_view"
            app:layout_constraintTop_toBottomOf="@id/tv_order_number_first"/>
        <Button
            android:id="@+id/tv_order_take_doc"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:text="@string/activity_order_take_doc"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:background="@drawable/activity_order_take_doc"
            app:layout_constraintTop_toBottomOf="@+id/v_split_seven"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tv_order_take_doc"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>