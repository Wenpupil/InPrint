<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context=".activity.SetActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingTop="24dp"
        android:background="@drawable/actionbar_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/activity_set_top_img"
            android:src="@mipmap/white_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/iv_back"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/activity_set_top_title"/>
    </RelativeLayout>
    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/view"
        app:layout_constraintTop_toBottomOf="@id/rl_top"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_set_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/pay_pattern"
        app:layout_constraintTop_toBottomOf="@id/split">
        <TextView
            android:id="@+id/tv_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_head_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/activity_set_enter"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="@id/tv_head_text"
            app:layout_constraintBottom_toBottomOf="@id/tv_head_text"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/split_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/view"
        app:layout_constraintTop_toBottomOf="@id/cl_set_head"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/pay_pattern"
        app:layout_constraintTop_toBottomOf="@id/split_two">
        <TextView
            android:id="@+id/tv_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_name_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_name"
            app:layout_constraintLeft_toRightOf="@id/tv_name_text"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/activity_set_enter"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="@id/tv_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/split_three"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/view"
        app:layout_constraintTop_toBottomOf="@id/cl_set_name"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_set_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/split_three">
        <TextView
            android:id="@+id/tv_set_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_id_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_id"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_set_id_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/split_four"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/view"
        app:layout_constraintTop_toBottomOf="@id/cl_set_id"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_set_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/pay_pattern"
        app:layout_constraintTop_toBottomOf="@id/split_four">
        <TextView
            android:id="@+id/tv_set_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_phone_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textColor="@color/red_book_text_color"
            android:textSize="16sp"
            android:text="@string/activity_set_phone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_set_phone_text"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/activity_set_enter"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/split_five"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/view"
        app:layout_constraintTop_toBottomOf="@id/cl_set_phone"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_set_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/pay_pattern"
        app:layout_constraintTop_toBottomOf="@id/split_five">
        <TextView
            android:id="@+id/tv_set_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_update_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/activity_set_update_text"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/split_six"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cl_set_update"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_set_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_pattern"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/split_six">
        <TextView
            android:id="@+id/tv_set_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/red_book_text_color"
            android:text="@string/activity_set_notify_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/activity_set_enter"
            android:src="@mipmap/backright"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/red_book_text_color"
        android:textSize="18sp"
        android:text="@string/activity_set_exit"
        app:layout_constraintTop_toBottomOf="@id/cl_set_notify"/>
</androidx.constraintlayout.widget.ConstraintLayout>