<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingTop="24dp"
        android:background="@drawable/actionbar_back">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/activity_service_back"
            android:src="@mipmap/white_back"/>
        <TextView
            android:id="@+id/talk_top_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/activity_service_title"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_talk_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true"
        android:background="@color/activity_service_background"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="@color/activity_service_background">
        <EditText
            android:id="@+id/talk_content"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="8.5"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/service_edit"/>

        <Button
            android:id="@+id/talk_send"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="@string/activity_service_send"
            android:textColor="@color/white"
            android:background="@drawable/service_send"/>
    </LinearLayout>
</LinearLayout>